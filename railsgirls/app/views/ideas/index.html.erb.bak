

<h1>Listing Ideas</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th>User</th>
      <th>Like</th>
      <th>Dislike</th>
      <th></th>
	  <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= link_to idea.name, idea%></td>
        <td><%= idea.description %></td>
        <td><%=link_to image_tag(idea.picture_url, :width => 60), idea %></td>
        <td><%= idea.user_id %></td><!-- -->
		<td><%= idea.like %></td>
		<td><%= idea.dislike %></td>
		
		<td>
			<%if current_user.id == idea.user_id %>
			<%= link_to 'Edit', edit_idea_path(idea) %>&nbsp;|&nbsp;
			<%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %>
			<% end %>
		</td>
		
		
		<td>
			<% if current_user.id != idea.user_id %>
			<%= link_to('Like' , {:controller =>'ideas',:action => 'like_add',:id =>idea.id } ) %>&nbsp;|
			<%= link_to('Dislike' , {:controller =>'ideas',:action => 'dislike_add',:id =>idea.id } ) %>
			<% end %>
		</td>
		
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
